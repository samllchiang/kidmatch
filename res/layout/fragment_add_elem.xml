	        android:layout_height="wrap_content"
	        
	        android:layout_weight="10" 
	        />
	     
	    <Spinner
	        android:id="@+id/border_updownspinner"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp" 
	        android:layout_weight="10" 
	        />
	    
	    <Spinner
	        android:id="@+id/border_customerspinner"
