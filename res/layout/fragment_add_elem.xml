    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
	    <ImageButton
	        android:id="@+id/photo_button"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	        android:src="@drawable/camera7" 
	        />
	    
	    <ImageButton
	        android:id="@+id/uri_button"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	         
	        android:src="@drawable/file2" 
	        />
	      
	     <ImageButton
	        android:id="@+id/cloud_button"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp" 
	        android:src="@drawable/cloud62" 
	        />
	     
	     <ImageButton
	        android:id="@+id/output_button"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp" 
	        android:src="@drawable/output66" 
	        />
         
    </LinearLayout>

    
    
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/question_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_button_text"
            android:layout_marginLeft="5dp" 
            />

        <Button
            android:id="@+id/answer_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/answer_button_text"
            android:layout_marginLeft="5dp" 
            />
        
        <Button
            android:id="@+id/text_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_button_text" 
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>

    <com.parse.ParseImageView
        android:id="@+id/elem_preview_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" 
        />

</LinearLayout>